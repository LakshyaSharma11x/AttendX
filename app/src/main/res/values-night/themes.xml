<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Attendx" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>

    <!--text in dark mode-->
    <style name="TEXT">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily"><![CDATA[@font/textfont]]></item>
        <item name="android:textSize">50sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <!--edit text in dark mode-->
    <style name="EDITTEXT" >
        <item name="android:layout_width">321dp</item>
        <item name="android:layout_height">54dp</item>
        <item name="android:ems">50</item>
        <item name="android:background">@drawable/button1_night</item>
        <item name="fontFamily"><![CDATA[@font/textfont]]></item>
        <item name="android:textSize">30sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <!--edit button in dark mode-->
    <style name="BUTTON">
        <item name="android:layout_width">125dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="fontFamily"><![CDATA[@font/textfont]]></item>
        <item name="android:background">@drawable/button1_night</item>
    </style>
</resources>